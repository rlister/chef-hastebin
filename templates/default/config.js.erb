{
  "host": "<%= node[:hastebin][:host] %>",
  "port": <%= node[:hastebin][:port] %>,

  "keyLength": 10,

  "maxLength": 400000,

  "staticMaxAge": 86400,

  "recompressStaticAssets": true,

  "logging": [
    {
      "level": "verbose",
      "type": "Console",
      "colorize": true
    }
  ],

  "keyGenerator": {
    "type": "phonetic"
  },

  "storage": {
    <% node[:hastebin][:storage].each |k, v| %>
      "<%= k.to_s %>": "<%= v %>"
    <% end %>
  },

  "documents": {
    "about": "./about.md"
  }
}
